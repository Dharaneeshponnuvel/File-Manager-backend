{
  "compilerOptions": {
    /* File structure */
    "rootDir": "./src",
    "outDir": "./dist",
    
    /* Node.js compatibility */
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    /* Debugging */
    "sourceMap": true,

    /* Build support */
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
